<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <%- include( 'partials/head', {
    pageTitle: 'Console Web',
    styles: ['operacao', 'components']
  } ) %>
</head>

<body>
  <header>
   
    <%- include( '../components/menu', {
      elements: [
        { ref: '#input', content: 'Dados' },
        { ref: '#comprovante__container', content: 'Resultados' },
        { ref: '#validacao__container', content: 'Validação' },
        { ref: '/main/logout', content: 'Sair'}
      ]
    }) %>

  </header>

  <main>
    <section class='main__container' id="input">
      <%- include( '../components/inputDados', {
        content: {
          title: "Escolha entre as opções a seguir:",
          subTitle: "Tipo de Teste:"
        },
        radioBtn: [ 
          {titulo: 'Operação', name: 'inputData', value: 'transacao'},
          {titulo: 'Validação', name: 'inputData', value: 'validacao'}
        ],
        button: {
          type: 'submit',
          extraClass: 'button',
          value: 'submit',
          id: 'inputData'
        },
        infoArea: infoArea
      }) %>
    </section>
  </main>

  <section class='comprovante__container' id='comprovante__container' >
    <%- include( 'partials/divisor', {title: 'Resultados'} )%>

  </section>

  <section class='validacao__container' id='validacao__container'>
    <%- include( 'partials/divisor', {title: 'Validação'} )%>
  </section>

  <footer>   
    <%- include( 'partials/footer' ) %>
  </footer>

  <%- include( 'partials/scripts', {
    scripts: ['operacao', 'components']
  }) %>
  
</body>
</html>