<% if( projects.length > 0 ) { %>
  <ul class="project__list">
    <% projects.forEach( ( p ) => { %>
    <li class="project__list--content">
      <a href data-modal=#<%= p.title %> class="modal__trigger modal__content--size"> <%= p.title %> </a>

      <div id="<%= p.title %>" class="modal" role="dialog" aria-hidden="true">
        <div class="modal__dialog modal__content">
          <h1 class="modal__title"><%= p.title %></h1>
          <p class="project__description"> <%= p.description %> </p>

          <% if ( p.validations && p.validations.length > 0 ) { %>
          <ul class="validation__container">
            <% p.validations.forEach( ( v ) => { %>
            <li class="validation__item">
              <div class="card__container">
                <img class= "card__image" src="/img/accepted_file.png" alt="validationImg" style="width: 100%;">
                <div class="card__content">
                  <h4 class="card__content--text"><%= v.title %></h4>
                </div>
              </div>    
            </li>
            <% }) %>
          </ul>
          <% } %>

          <%- include( 'closePageIcon' ) %>
        </div>
      </div>
    </li>
    <% }) %>
  </ul>

  <% } else { %>
  <p class="projectNone"> Nenhum Projeto adicionado </p>
  <% }; %>