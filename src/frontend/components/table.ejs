<% if( validacao ) { %>
<table class="table__container table_container--shadow">
  <thead>
    <tr class="table__title">
      <th class="table__title--border">PWINFO's</th>
      <th class="table__title--border">VALIDAÇÃO</th>
    </tr>
  </thead>

  <tbody>

    <% const receipts = ['PWINFO_RCPTCHSHORT', '0x37', 'PWINFO_RCPTCHOLDER', '0x36', 'PWINFO_RCPTMERCH', '0x35' ]; %>
    <% validacao.forEach( ( item ) => { %>
    <tr class="table__content">

      <% if( Object.keys(item) == 'isValid' && Object.values(item) == 'false' ) { %> 
        <td class="table__content--border table__content--left table__content--invalid"> <%= Object.keys(item) %> </td>

        <td class="table__content--border table__content--right table__content--invalid">
          <%= Object.values(item) %>
        </td>
      <% } else if( Object.keys(item) == 'isValid' && Object.values(item) == 'true' ) { %>
        
          <td class="table__content--border table__content--left table__content--valid"> <%= Object.keys(item) %> </td>

          <td class="table__content--border table__content--right table__content--valid">
            <%= Object.values(item) %>
          </td>  
          
      <% } else if( receipts.includes(  String( Object.keys( item ) ) ) ) { %>

        <td class="table__content--border table__content--left">
          <%= Object.keys(item) %>
        </td>

        <td class="table__content--border comprovante__lista--conteudoValidacao">
          <%= Object.values(item) %>
        </td>  

      <% } else { %>
          
        <td class="table__content--border table__content--left"> <%= Object.keys(item) %> </td>

        <td class="table__content--border table__content--right">
          <%= Object.values(item) %>
        </td>
      <% } %>

    </tr>
    <%  }) %>
  </tbody>
</table>
<% }; %>